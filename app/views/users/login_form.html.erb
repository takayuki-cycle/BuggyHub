<div class="main users-new">
  <div class="container">
    <div class="form-heading"><i class="fas fa-sign-in-alt" style="color: hotpink;"></i>&nbsp;ログイン</div>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
        <div class="form-error">
          <%= @error_message %>
        </div>
        <% end %>
        <%= form_tag("/login") do %>
        <i class="fas fa-envelope" style="color: hotpink;"></i>&nbsp;メールアドレス
        <input name="email" value="<%= @email %>">
        <i class="fas fa-key" style="color: hotpink;"></i>&nbsp;パスワード
        <input type="password" name="password" value="<%= @password %>">
        <button type="submit" class="sign-in-alt">
          <span class="faa-parent animated-hover">
            <i class="fas fa-sign-in-alt faa-pulse"></i>&nbsp;ログイン
          </span>
        </button>
        <% end %>
      </div>
    </div>
  </div>
</div>